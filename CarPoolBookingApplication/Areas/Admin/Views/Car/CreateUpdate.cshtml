@model CarPoolBooking.Models.ViewModels.CarVm
<form method="post" asp-action="CreateUpdate" enctype="multipart/form-data">
    <input type="hidden" asp-for="Car.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary">@((Model.Car==null || Model.Car.Id==0)?"Add":"Update") Car Details</h2>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="row mb-3">
            <label asp-for="Car.CarNumber"></label>
            <input asp-for="Car.CarNumber" class="form-control" />
            <span asp-validation-for="Car.CarNumber" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="Car.SeatCapacity"></label>
            <input asp-for="Car.SeatCapacity" class="form-control" />
            <span asp-validation-for="Car.CarNumber" class="text-danger"></span>
        </div>
        @if (Model.Car == null || Model.Car.Id == 0)
        {
            <button class="btn btn-primary" type="submit">Create</button>
        }
        else
        {
            <button class="btn btn-primary" type="submit">Update</button>
        }
    </div>
</form>